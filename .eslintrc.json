{
  "extends": [
    "@salesforce/eslint-config-lwc/recommended",
    "@salesforce/eslint-plugin-aura/recommended"
  ],
  "plugins": [
    "@salesforce/eslint-plugin-lightning"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "@lwc/lwc/no-leading-uppercase-api-name": "error",
    "@lwc/lwc/valid-api": "error",
    "@lwc/lwc/no-deprecated": "warn",
    "@lwc/lwc/consistent-component-name": "error",
    "no-console": "warn",
    "no-debugger": "error",
    "no-alert": "error",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/__tests__/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
      }
    },
    {
      "files": ["**/lwc/**/*.js"],
      "rules": {
        "@lwc/lwc/no-api-reassignments": "error",
        "@lwc/lwc/no-document-query": "error"
      }
    }
  ]
}