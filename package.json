{
  "name": "omnistudio-training-platform",
  "version": "1.0.0",
  "description": "Adaptive learning platform for OmniStudio certification preparation",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "sfdx force:apex:test:run",
    "test:unit:code-coverage": "sfdx force:apex:test:run --code-coverage --result-format=human",
    "scratch:create": "sfdx force:org:create -f config/project-scratch-def.json -d 30 -s -w 10",
    "scratch:push": "sfdx force:source:push",
    "scratch:pull": "sfdx force:source:pull",
    "scratch:open": "sfdx force:org:open",
    "scratch:delete": "sfdx force:org:delete -u",
    "deploy:check": "sfdx force:source:deploy --checkonly --sourcepath force-app",
    "deploy:prod": "sfdx force:source:deploy --sourcepath force-app",
    "lint": "npm run lint:lwc && npm run lint:apex",
    "lint:lwc": "eslint **/lwc/**",
    "lint:apex": "sfdx scanner:run --target 'force-app/**/*.cls' --format table",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zerovizboss/OmniStudio.git"
  },
  "keywords": [
    "salesforce",
    "omnistudio",
    "training",
    "certification",
    "adaptive-learning",
    "sfdx"
  ],
  "author": "zerovizboss",
  "license": "MIT",
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^1.6.3",
    "@prettier/plugin-xml": "^2.2.0",
    "@salesforce/eslint-config-lwc": "^3.4.0",
    "@salesforce/eslint-plugin-aura": "^2.1.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^3.1.0",
    "eslint": "^8.47.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-apex": "^1.13.0"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/*.{cls,trigger}": [
      "sfdx scanner:run --target --format=table"
    ],
    "**/lwc/**": [
      "eslint"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}